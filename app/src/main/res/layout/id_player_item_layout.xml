<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="300dp"
                                       app:cardCornerRadius="30dp"
                                       android:layout_marginTop="10dp"
                                       android:layout_gravity="center_horizontal"
                                       app:cardBackgroundColor="@color/color_background_item"
                                       android:layout_height="60dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="match_parent" tools:ignore="UseCompoundDrawables">

            <ImageView android:layout_width="50dp"
                       android:src="@drawable/eeee"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="20dp"
                       android:contentDescription="@string/item_txt_id"
                       android:layout_height="50dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_marginStart="30dp"
                      style="@style/Base.TextAppearance.AppCompat.Title"
                      android:textColor="@color/white"
                      android:alpha="0.7"
                      android:id="@+id/name"
                      android:layout_gravity="center_vertical"
                      android:text="@string/item_txt_id"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
